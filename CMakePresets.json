{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base-preset",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "windows-x64-base-preset",
            "hidden": true,
            "description": "Target Windows with the Visual Studio 2022 development environment",
            "inherits": "base-preset",
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_MASTER}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "VCPKG_INSTALLED_DIR": "${sourceDir}/build/packages",
				"VCPKG_OVERLAY_TRIPLETS" : "${sourceDir}/vcpkg_scripts",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
            },
            "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Windows" ] } }
        },
        {
            "name": "windows-x64-debug-ninja",
            "displayName": "windows-x64-debug-ninja",
            "description": "Target Windows with the Visual Studio 2022 development environment",
            "inherits": "windows-x64-base-preset",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x64-release-ninja",
            "displayName": "windows-x64-release-ninja",
            "description": "Target Windows with the Visual Studio 2022 development environment",
            "inherits": "windows-x64-base-preset",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "vs2022",
            "displayName": "vs2022",
            "description": "Target Windows with the Visual Studio 2022 development environment",
            "inherits": "windows-x64-base-preset",
            "generator": "Visual Studio 17 2022"
        }
    ],
	"buildPresets": [
        {
            "name": "vs2022r",
            "configurePreset": "vs2022",
            "configuration": "RelWithDebInfo"
        },
		{
            "name": "vs2022r-clean",
			"inherits" : "vs2022r",
            "cleanFirst": true
        },
        {
            "name": "vs2022d",
            "configurePreset": "vs2022",
            "configuration": "Debug"
        },
		{
            "name": "vs2022r-tests",
            "configurePreset": "vs2022",
            "configuration": "RelWithDebInfo",
            "targets": ["Eureka.UnitTests"]
        },
		{
            "name": "vs2022d-tests",
            "configurePreset": "vs2022",
            "configuration": "Debug",
            "targets": ["Eureka.UnitTests"]
        }
    ]
}